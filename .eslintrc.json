{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "plugins" : [
    "prettier"
  ],
  "globals": {
    "jQuery": true,
    "$": true,
    "_": true,
    "Backbone": true,
    "console": true,
    "define": true,
    "ga": true,
    "markdownitEmoji": true,
    "markdownitSanitizer": true,
    "md": true,
    "module": true,
    "moment": true,
    "MarkdownSanitizerMixin": true,
    "Mousetrap": true,
    "PaginationMixin": true,
    "Prism": true,
    "Promise": true,
    "require": true,
    "wcEvents": true,
    "wcTmpl": true,
    "WindowHelpers": true,
    "Validation": true
  },
  "rules": {
    "eqeqeq": [2, "smart"],
    "new-cap": 2,
    "no-cond-assign": 0,
    "no-use-before-define": 2,
    "one-var": [2, "never"],
    "prettier/prettier": "error"
  }
}
